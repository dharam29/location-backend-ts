{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "lib",
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
